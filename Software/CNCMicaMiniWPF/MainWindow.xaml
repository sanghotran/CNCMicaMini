<Window x:Class="CNCMicaMiniWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CNCMicaMiniWPF"
        mc:Ignorable="d"
        Height="760" Width="1360"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="Images/background.jfif"/>
    </Window.Background>
    <Grid>
        <!-- Frame window-->
        <Grid>
            <Image>
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Source" Value="Images/redframeneon.png"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                <Setter Property="Source" Value="Images/blueframeneon.png"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </Grid>
        <!-- Frame CNC-->
        <Grid
              Margin="575,80,30,30">
            <Image Source="Images/Iredframeneon.png"/>
        </Grid>
        <!-- Software's Name-->
        <Grid Margin="700 30 200 690">
            <TextBlock Text="CNC MINI"
                       FontSize="40"
                       FontFamily="{StaticResource futuralFont}"
                       TextAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <EventTrigger RoutedEvent="Window.Loaded">
                                <!--BeginStoryboard Storyboard="{StaticResource GUI_NameStoryBoard}"/-->
                                <BeginStoryboard Storyboard="{StaticResource GUI_TextColor}"/>
                            </EventTrigger>                            
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
        <!-- Created by Sang-->
        <Grid Margin="1150 30 25 680">
            <TextBlock Text="Created by Sang"
                       FontSize="20"
                       FontFamily="{StaticResource futuralFont}"
                       Margin="0 20 0 0"
                       TextAlignment="Center">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Style.Triggers>
                            <EventTrigger RoutedEvent="Window.Loaded">
                                <BeginStoryboard Storyboard="{StaticResource GUI_TextColor}"/>
                            </EventTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
                
            </TextBlock>
        </Grid>
        <!-- Control bar-->
        <DockPanel Background="Transparent"
                   LastChildFill="False"
                   Height="50"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Stretch"
                   PreviewMouseLeftButtonDown="DragWindow">
            <!--Close button-->
            <Image DockPanel.Dock="Right"
                   Source="Images/x.png"
                   Margin="0 0 10 0"
                   Cursor="Hand"
                   PreviewMouseDown="CloseApp">
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Width" Value="40"/>
                        <Style.Triggers>
                            <Trigger Property="Image.IsMouseOver" Value="True">
                                <Setter Property="Width" Value="50"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
            <!--Minimize button-->
            <Image DockPanel.Dock="Right"
                   Source="Images/-.png"
                   Margin="0 0 5 0"
                   Cursor="Hand"
                   PreviewMouseDown="MinimizeApp">
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Width" Value="40"/>
                        <Style.Triggers>
                            <Trigger Property="Image.IsMouseOver" Value="True">
                                <Setter Property="Width" Value="50"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </DockPanel>
        <!-- Task bar-->
        <DockPanel Margin="25 25 1000 690"
                   Background="Transparent"
                   LastChildFill="False"
                   HorizontalAlignment="Stretch">
            <!-- Control Page Button-->
            <Image Source="Images/Home.png"
                   DockPanel.Dock="Left"
                   Cursor="Hand"
                   PreviewMouseDown="ControlPage"
                   Margin="5 0 0 0">
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Width" Value="40"/>
                        <Style.Triggers>
                            <Trigger Property="Image.IsMouseOver" Value="True">
                                <Setter Property="Width" Value="50"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
            <!-- Debug Page Button-->
            <Image Source="Images/Debug.png"
                   DockPanel.Dock="Left"
                   Cursor="Hand"
                   PreviewMouseDown="DebugPage"
                   Margin="5 0 0 0">
                <Image.Style>
                    <Style TargetType="Image">
                        <Setter Property="Width" Value="40"/>
                        <Style.Triggers>
                            <Trigger Property="Image.IsMouseOver" Value="True">
                                <Setter Property="Width" Value="50"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </DockPanel>
        <!-- Main Page-->
        <Grid Margin="25 80 830 25">
            <!-- Control Page-->
            <Grid Visibility="{Binding IsControlPageShow}">
                <!-- Frame Image-->
                <Grid Visibility="Hidden"
                      Margin="0 0 0 270">
                    <Image Source="Images/gredframeneon.png">
                    </Image>
                </Grid>
                <!-- Select Gcode button-->
                <Grid Margin="285 385 20 230"
                      Cursor="Hand"
                      PreviewMouseDown="SelectImage">
                    <Image>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value="Images/graybutton.png"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsConnected}" Value="True"/>
                                            <Condition Binding="{Binding IsStarted}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Source" Value="Images/bluebutton.png"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <TextBlock FontFamily="{StaticResource futuralFont}"
                       TextAlignment="Center"
                       Text="SELECT IMAGE"
                       Margin="0 8 0 0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="20"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsConnected}" Value="True"/>
                                            <Condition Binding="{Binding IsStarted}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="FontSize" Value="19"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                <!-- Frame Gcode-->
                <Grid Margin="0,0,0,270">
                    <Image>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value="Images/gredframeneon.png"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsGcodeSelected}" Value="True">
                                        <Setter Property="Source" Value="Images/gblueframeneon.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <ScrollViewer Margin="25 25 25 25"
                                  VerticalScrollBarVisibility="Hidden">
                        <TextBlock x:Name="Gcode" FontSize="12" Foreground="Red">
                        </TextBlock>
                    </ScrollViewer>
                </Grid>
                <!-- Select Gcode button-->
                <Grid Margin="20 385 285 230"
                      Cursor="Hand"
                      PreviewMouseDown="SelectGcode">
                    <Image>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value="Images/graybutton.png"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsConnected}" Value="True"/>
                                            <Condition Binding="{Binding IsStarted}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Source" Value="Images/bluebutton.png"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <TextBlock FontFamily="{StaticResource futuralFont}"
                       TextAlignment="Center"
                       Text="SELECT GCODE"
                       Margin="0 8 0 0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="20"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsConnected}" Value="True"/>
                                            <Condition Binding="{Binding IsStarted}" Value="False"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="FontSize" Value="19"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                <!-- Connect button-->
                <Grid Width="200"
                      VerticalAlignment="Bottom"
                      HorizontalAlignment="Center"
                      Margin="-40 0 0 160 "
                      Cursor="Hand"
                      PreviewMouseDown="Connect">
                    <Image>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value="Images/greenbutton.png"/>
                                <Style.Triggers>
                                    <DataTrigger Binding ="{Binding IsConnected}" Value="True">
                                        <Setter Property="Source" Value="Images/redbutton.png"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsStarted}" Value="True">
                                        <Setter Property="Source" Value="Images/graybutton.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <TextBlock FontFamily="{StaticResource futuralFont}"
                               TextAlignment="Center"
                               Margin=" 0 8 0 0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="CONNECT"/>
                                <Setter Property="FontSize" Value="35"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Text" Value="DISCONNECT"/>
                                        <Setter Property="FontSize" Value="25"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>

                    </TextBlock>
                </Grid>
                <!-- Start button-->
                <Grid Width="200"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Bottom"
                      Margin="-40 0 0 90"
                      Cursor="Hand"
                      PreviewMouseDown="Start">
                    <Image>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value="Images/graybutton.png"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsConnected}" Value="True"/>
                                            <Condition Binding="{Binding IsGcodeSelected}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Source" Value="Images/greenbutton.png"/>
                                    </MultiDataTrigger>
                                    <DataTrigger Binding="{Binding IsStarted}" Value="True">
                                        <Setter Property="Source" Value="Images/redbutton.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <TextBlock FontFamily="{StaticResource futuralFont}"
                       TextAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="START"/>
                                <Setter Property="Margin" Value="0 2 0 0"/>
                                <Setter Property="FontSize" Value="35"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsConnected}" Value="True"/>
                                            <Condition Binding="{Binding IsStarted}" Value="False"/>
                                            <Condition Binding="{Binding IsGcodeSelected}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Text" Value="START"/>
                                        <Setter Property="Margin" Value="0 10 0 0"/>
                                    </MultiDataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsConnected}" Value="True"/>
                                            <Condition Binding="{Binding IsStarted}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Text" Value="STOP"/>
                                        <Setter Property="Margin" Value="0 5 0 0"/>
                                        <Setter Property="FontSize" Value="30"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                <!-- Pause button-->
                <Grid Width="200"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Bottom"
                      Margin="-40 0 0 20"
                      Cursor="Hand"
                      PreviewMouseDown="Pause">
                    <Image>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Source" Value="Images/graybutton.png"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsStarted}" Value="True">
                                        <Setter Property="Source" Value="Images/redbutton.png"/>
                                    </DataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsStarted}" Value="True"/>
                                            <Condition Binding="{Binding IsPause}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Source" Value="Images/greenbutton.png"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <TextBlock FontFamily="{StaticResource futuralFont}"
                       TextAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="PAUSE"/>
                                <Setter Property="FontSize" Value="35"/>
                                <Setter Property="Margin" Value="0 5 0 0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsStarted}" Value="True">
                                        <Setter Property="FontSize" Value="30"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsPause}" Value="True">
                                        <Setter Property="Text" Value="RESUME"/>
                                        <Setter Property="Margin" Value="0 12 0 0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </Grid>
            <!-- Debug Page-->
            <Grid Visibility="{Binding IsDebugPageShow}">
                <!-- Debug and Log-->
                <Grid Margin="0 0 0 280">
                    <Grid.Background>
                        <ImageBrush ImageSource="Images/debugscreen.png"/>
                    </Grid.Background>
                    <!-- Debug-->
                    <ScrollViewer Margin="200 20 15 30"
                                  VerticalScrollBarVisibility="Hidden"
                                  x:Name="DebugScroll">
                        <TextBlock x:Name="debug" FontSize="22" 
                                   TextWrapping="Wrap" Foreground="Green"/>
                    </ScrollViewer>
                    <!-- Log-->
                    <ScrollViewer Margin="15 20 290 30"
                                  VerticalScrollBarVisibility="Hidden"
                                  x:Name="LogScroll">
                        <TextBlock x:Name="log" FontSize="22" 
                                   TextWrapping="Wrap" Foreground="Green"/>
                    </ScrollViewer>
                </Grid>
                <!-- Setting For Start CNC-->
                <Grid Margin=" 0 460 0 0"
                      Visibility="{Binding IsSettingCNCPageShow}">
                    <!-- HOME button-->
                    <Grid Margin="160 140 160 10"
                                  Cursor="Hand"
                                  PreviewMouseDown="Home">
                        <Image>
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="Images/graybutton.png"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="Source" Value="Images/greenbutton.png"/>
                                        </DataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsStarted}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Source" Value="Images/redbutton.png"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock FontFamily="{StaticResource futuralFont}"
                                           TextAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="HOME"/>
                                    <Setter Property="FontSize" Value="30"/>
                                    <Setter Property="Margin" Value="0 5 0 0"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsStarted}" Value="True">
                                            <Setter Property="FontSize" Value="25"/>
                                            <Setter Property="Margin" Value="0 2 0 0"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                            <Setter Property="Margin" Value="0 7 0 0"/>
                                            <Setter Property="FontSize" Value="25"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                    <!-- Thickness-->
                    <Grid Margin="0 0 320 60">
                        <TextBlock Text="Thickness" FontSize="30"
                                           TextAlignment="Center"
                                           FontFamily="{StaticResource futuralFont}"/>
                        <TextBox Margin="20 50 20 50"
                                         x:Name="thickness"
                                         TextAlignment="Center"
                                         FontSize="25"
                                         FontFamily="{StaticResource futuralFont}"/>
                    </Grid>
                </Grid>
                <!-- Setting-->
                <Grid Margin="0 400 0 0">
                    <!-- Setting button-->
                    <Image Source="Images/setting.png"
                           Margin="10 0 450 200"
                           Cursor="Hand"
                           PreviewMouseDown="Setting">
                    </Image>
                    <!-- Setting Page-->
                    <Grid Visibility="{Binding IsSettingPageShow}"
                          Margin="0 60 0 0">
                        <!-- Task bar Setting-->
                        <DockPanel Margin="10 0 0 150"
                                   Background="Transparent"
                                   LastChildFill="False"
                                   HorizontalAlignment="Stretch">
                            <!-- X setting-->
                            <Grid Cursor="Hand"
                                  Margin="5 0 0 0"
                                  PreviewMouseDown="X">
                                <Image>
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="Images/bluebuttoncircle.png"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding ="{Binding IsX}" Value="True">
                                                    <Setter Property="Source" Value="Images/greenbuttoncircle.png"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <TextBlock TextAlignment="Center" Margin="0 7 0 0"
                                           Text="X" FontSize="25" 
                                           FontFamily="{StaticResource futuralFont}"/>
                            </Grid>
                            <!-- Y setting-->
                            <Grid Cursor="Hand"
                                  Margin="5 0 0 0"
                                  PreviewMouseDown="Y">
                                <Image>
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="Images/bluebuttoncircle.png"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding ="{Binding IsY}" Value="True">
                                                    <Setter Property="Source" Value="Images/greenbuttoncircle.png"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <TextBlock TextAlignment="Center" Margin="0 7 0 0"
                                           Text="Y" FontSize="25" 
                                           FontFamily="{StaticResource futuralFont}"/>
                            </Grid>
                            <!-- Z setting-->
                            <Grid Cursor="Hand"
                                  Margin="5 0 0 0"
                                  PreviewMouseDown="Z">
                                <Image>
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="Images/bluebuttoncircle.png"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding ="{Binding IsZ}" Value="True">
                                                    <Setter Property="Source" Value="Images/greenbuttoncircle.png"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <TextBlock TextAlignment="Center" Margin="0 7 0 0"
                                           Text="Z" FontSize="25" 
                                           FontFamily="{StaticResource futuralFont}"/>
                            </Grid>
                            <!-- Calib-->
                            <Grid Cursor="Hand"
                                  Margin="5 0 0 0"
                                  PreviewMouseDown="Calib">
                                <Image>
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="Images/bluebuttoncircle.png"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding ="{Binding IsCalib}" Value="True">
                                                    <Setter Property="Source" Value="Images/greenbuttoncircle.png"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <TextBlock TextAlignment="Center" Margin="0 7 0 0"
                                           Text="C" FontSize="25" 
                                           FontFamily="{StaticResource futuralFont}"/>
                            </Grid>
                        </DockPanel>
                        <!-- Input PID Page-->
                        <Grid Margin="0 50 0 0"
                              Visibility="{Binding IsInputPIDPageShow}">
                            <!-- Kp-->
                            <Grid Margin="0 0 320 60">
                                <TextBlock Text="Kp" FontSize="30"
                                           TextAlignment="Center"
                                           FontFamily="{StaticResource futuralFont}"/>
                                <TextBox Margin="20 50 20 0"
                                         x:Name="Kp"
                                         TextAlignment="Center"
                                         FontSize="25"
                                         FontFamily="{StaticResource futuralFont}"/>
                            </Grid>
                            <!-- Ki-->
                            <Grid Margin="160 0 160 60">
                                <TextBlock Text="Ki" FontSize="30"
                                           TextAlignment="Center"
                                           FontFamily="{StaticResource futuralFont}"/>
                                <TextBox Margin="20 50 20 0"
                                         x:Name="Ki"
                                         TextAlignment="Center"
                                         FontSize="25"
                                         FontFamily="{StaticResource futuralFont}"/>
                            </Grid>
                            <!-- Kd-->
                            <Grid Margin="320 0 0 60">
                                <TextBlock Text="Kd" FontSize="30"
                                           TextAlignment="Center"
                                           FontFamily="{StaticResource futuralFont}"/>
                                <TextBox Margin="20 50 20 0"
                                         x:Name="Kd"
                                         TextAlignment="Center"
                                         FontSize="25"
                                         FontFamily="{StaticResource futuralFont}"/>
                            </Grid>
                            <!-- Send PID-->
                            <Grid Margin="160 100 160 0"
                                  Cursor="Hand"
                                  PreviewMouseDown="SendPID">
                                <Image>
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="Images/graybutton.png"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                    <Setter Property="Source" Value="Images/greenbutton.png"/>
                                                </DataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsStarted}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Source" Value="Images/redbutton.png"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <TextBlock FontFamily="{StaticResource futuralFont}"
                                           TextAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="SEND PID"/>
                                            <Setter Property="FontSize" Value="30"/>
                                            <Setter Property="Margin" Value="0 5 0 0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsStarted}" Value="True">
                                                    <Setter Property="FontSize" Value="25"/>
                                                    <Setter Property="Margin" Value="0 2 0 0"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                    <Setter Property="Margin" Value="0 7 0 0"/>
                                                    <Setter Property="FontSize" Value="25"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                            </Grid>
                        </Grid>
                        <!-- Calib Page-->
                        <Grid Margin="0 50 0 0"
                              Visibility="{Binding IsCalibPageShow}">
                            <!-- setpoint-->
                            <Grid Margin="0 0 320 60">
                                <TextBlock Text="SetPoint" FontSize="30"
                                           TextAlignment="Center"
                                           FontFamily="{StaticResource futuralFont}"/>
                                <TextBox Margin="20 50 20 0"
                                         x:Name="setpoint"
                                         TextAlignment="Center"
                                         FontSize="25"
                                         FontFamily="{StaticResource futuralFont}"/>
                            </Grid>
                            <!-- Send Calib-->
                            <Grid Margin="160 100 160 0"
                                  Cursor="Hand"
                                  PreviewMouseDown="SendCalib">
                                <Image>
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="Images/graybutton.png"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                    <Setter Property="Source" Value="Images/greenbutton.png"/>
                                                </DataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding IsStarted}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Source" Value="Images/redbutton.png"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <TextBlock FontFamily="{StaticResource futuralFont}"
                                           TextAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="SEND"/>
                                            <Setter Property="FontSize" Value="30"/>
                                            <Setter Property="Margin" Value="0 5 0 0"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsStarted}" Value="True">
                                                    <Setter Property="FontSize" Value="25"/>
                                                    <Setter Property="Margin" Value="0 2 0 0"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                    <Setter Property="Margin" Value="0 7 0 0"/>
                                                    <Setter Property="FontSize" Value="25"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <!-- Error warning-->
        <Grid Visibility="{Binding IsWarningBoxShow}">
            <!--Background-->
            <Grid Background="Red" Opacity="0.6"/>
            <Grid Margin="0 150 0 150">
                <Image Source="Images/warningbox.jpg"/>
                <TextBlock Text="ERROR CONNECT!!"
                           FontFamily="{StaticResource futuralFont}"
                           FontSize="65"
                           TextAlignment="Center"
                           Margin="0 220 0 140"/>
                <Grid Margin="500 300 500 0">
                    <Image Source="Images/redbutton.png"/>
                    <TextBlock Text="OK"
                               FontSize="50"
                               FontFamily="{StaticResource futuralFont}"
                               TextAlignment="Center"
                               Margin="0 50 0 0"
                               Cursor="Hand"
                               PreviewMouseDown="Ok_Warning"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>